<%- include('includes/head'); %>
<%- include('includes/navBar'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Add contact</h1>
            <p class="text-center lead">Create or edit your contact bellow.</p>

            <%- include('includes/messages'); %>

            <form action="/contact/register" method="post">
                        
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>

                <div class="form-group my-3">
                  <input type="text" class="form-control" name="first-name"  placeholder="First name">
                </div>

                <div class="form-group my-3">
                    <input type="text" class="form-control" name="last-name"  placeholder="Last name">
                </div>

                <div class="form-group my-3">
                    <input type="email" class="form-control" name="email"  placeholder="Email">
                </div>

                <div class="form-group my-3">
                    <input type="tel" class="form-control" name="telephone"  placeholder="Telephone">
                </div>

                

                <button type="submit" class="btn btn-primary">Salve contact</button>
            </form>

        </div>
        
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>